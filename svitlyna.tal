@detect-magic ( -- )
	LIT "m Mcout Mendl
	#0000
	&loop
		DUP2
		;&magic ADD2 LDA #00 EQU ?&loop-end
		DUP2 ;&magic ADD2 LDA 
		( OVR .buf ADD LDZ )
		DUP .Console/write DEO 
		EQU ?{ !bad-file }
		INC2 
	!&loop
	[ &magic "farbfeld 00 ]
	&loop-end

	Mendl 
	( ;ff-size #08 Mbuf-next )
	POP2 
JMP2r


